{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password' | trans }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="d-flex justify-content-between align-items-center ">
        <h1 class="">{{ 'reset_password' | trans }}</h1>
        <div>
            <a class="btn btn-secondary" href="{{ path('app_register') }}">{{ 'login.to.register'|trans }}</a>
            <a class="btn btn-secondary" href="{{ path('app_login') }}">{{ 'register.to.login'|trans }}</a>
        </div>
    </div>
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}

        <button class="btn btn-primary">{{ 'reset_password.request.button' | trans}}</button>
    {{ form_end(requestForm) }}
{% endblock %}
